<nav class='uk-navbar-container' uk-navbar>
  <div class='uk-navbar-left'>

    <ul class='uk-navbar-nav'>
      <li><LinkTo @route='posts'>Feed</LinkTo></li>
      <li><LinkTo @route='users'>Users</LinkTo></li>
    </ul>

  </div>

  <div class='uk-navbar-right'>
    <ul class='uk-navbar-nav'>

      <Authentication::AccountProvider as |isAuthenticated account|>
        {{#if isAuthenticated}}
          <li><a href='#modal-example' uk-toggle>Create New Post</a></li>
          <Modal @modal-id='modal-example' @modal-title='Create new post'>
            <Posts::New />
          </Modal>
          <li>
            <LinkTo @route='my-profile'>{{account.formattedNickname}}</LinkTo>
          </li>
          <li>
            <div class='uk-navbar-item'>
              <Authentication::MuLogout />
            </div>
          </li>

        {{else}}
          <li>
            <a href='#modal-authentication' uk-toggle>Log In/Sign Up</a>
            <Modal
              @modal-id='modal-authentication'
              @modal-title='Authentication'
            >
              <Authentication::AuthenticationView />
            </Modal>
          </li>
        {{/if}}
      </Authentication::AccountProvider>

    </ul>

  </div>
</nav>