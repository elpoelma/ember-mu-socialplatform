<form {{on "submit" this.createPost}}>
    <div class="uk-margin">
        <Input type="text" class="uk-input" @value={{this.headline}} placeholder="Post title" />
    </div>

    <div class="uk-margin">
        <Textarea class="uk-textarea" rows="5" placeholder="Textarea" @value={{this.body}} />
    </div>
     <div uk-form-custom class="uk-margin">
        <FileUpload @onFileSelect={{this.setPostImage}}/>
        <button class="uk-button uk-button-default" type="button">Select Image</button>

    </div>
    <div class="uk-margin">
        <img src={{this.imagePreviewURL}}/>
    </div>
    <p class="uk-text-right">
        <button class="uk-button uk-button-default uk-modal-close" type="button">Cancel</button>
        <button class="uk-button uk-button-primary" type="submit">Save</button>
    </p>
</form>