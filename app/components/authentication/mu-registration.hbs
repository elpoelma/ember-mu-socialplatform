<form {{on "submit" this.register}}>
    <div class="uk-margin">
        <label for="mu-signup-name">Name</label>
        <Input @id="mu-signup-name" class="uk-input" @value={{this.name}} placeholder={{@placeholder}} />
    </div>
    <div class="uk-margin">
        <label for="mu-signup-username">Username</label>
        <Input @id="mu-signup-username" class="uk-input" @value={{this.nickname}} placeholder={{@placeholder}} />
    </div>
    <div class="uk-margin">
        <label for="mu-signup-password">Password</label>
        <Input @id="mu-signup-password" class="uk-input" @value={{this.password}} type="password" />
    </div>
    <div class="uk-margin">
        <label for="mu-signup-passwordConfirm">Password Confirmation</label>
        <Input @id="mu-signup-passwordConfirm" class="uk-input" @value={{this.passwordConfirm}} type="password" />
    </div>
    <button class="uk-button uk-button-primary" type="submit">
        Register
    </button>
</form>