<form {{on "submit" this.login}}>
  <div class="uk-margin">
    <label for="mu-login-username">Username</label>
    <Input class="uk-input" @value={{this.nickname}} placeholder={{@placeholder}} />
  </div>
  <div class="uk-margin">
    <label for="mu-login-password">Password</label>
    <Input id="mu-login-password" class="uk-input" @value={{this.password}} type="password" />
  </div>
  <div class="feedback-message">
    {{#if this.isAuthenticating}}
    <div class="mu-login-authenticating">
      Verifying credentials
    </div>
    {{/if}}
    {{#if this.errorMessage}}
    <div class="mu-login-error-message">
      {{this.errorMessage}}
    </div>
    {{/if}}
  </div>
  <button class="uk-button uk-button-primary" type="submit" disabled={{this.isAuthenticating}}>
    {{this.label}}
  </button>

</form>