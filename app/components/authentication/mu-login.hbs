<form {{on 'submit' this.login}}>

  <Forms::FormInput
    @labelText='Username'
    @inputValue={{this.nickname}}
    @placeholder={{@placeholder}}
  />

  <Forms::FormInput
    @labelText='Password'
    @inputValue={{this.password}}
    @inputType='password'
  />

  <div class='feedback-message'>
    {{#if this.isAuthenticating}}
      <div class='mu-login-authenticating'>
        Verifying credentials
      </div>
    {{/if}}
    {{#if this.errorMessage}}
      <div class='mu-login-error-message'>
        {{this.errorMessage}}
      </div>
    {{/if}}
  </div>
  <button
    class='uk-button uk-button-primary'
    type='submit'
    disabled={{this.isAuthenticating}}
  >
    {{this.label}}
  </button>

</form>